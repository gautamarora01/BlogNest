<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Write Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input class="form-control" type="file" id="coverImage" name="coverImage">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" placeholder="Add Title" id="title" name="title">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea class="form-control" placeholder="Start writing your thoughts, ideas, or stories..." id="body" name="body" style="height: 150px"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-custom">Submit</button>
            </div>
        </form>
    </div>

    
    <%- include("./partials/scripts") %>
</body>
</html>